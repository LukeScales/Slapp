<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.getslapp.slapp.YearSelectFragment"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:srcCompat="@drawable/logo_white_background"
            android:id="@+id/imageView"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="32dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#FFFFFF"
            android:id="@+id/relativeLayout">

            <View style="@style/Divider"
                android:id="@+id/divider"
                android:layout_height="2dp"
                android:background="#48e651"/>

            <com.getslapp.slapp.AileronTextView
                android:text="Please wait while your timetable is downloaded."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/textView8"
                android:textAlignment="center"
                android:layout_below="@+id/divider"
                android:textColor="#555555" />

            <com.getslapp.slapp.AileronTextView
                android:text="This may take a few minutes."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:paddingBottom="15dp"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textColor="#555555" />

            <View style="@style/Divider"
                android:layout_below="@+id/progressBar3"
                android:layout_height="2dp"
                android:background="#48e651"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:id="@+id/progressBar3"
                android:paddingBottom="15dp"
                android:indeterminate="true" />



        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
