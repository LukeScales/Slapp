<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.getslapp.slapp.AboutFragment"
    android:background="#F3F3F3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.getslapp.slapp.AileronTextView
                android:text="SLAPP Android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAlignment="viewStart"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:textColor="#555555" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <View style="@style/Divider"/>

                <com.getslapp.slapp.AileronButton
                    android:text="Version 1.0.0"
                    android:layout_width="match_parent"
                    android:id="@+id/button2"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    android:textAlignment="viewStart"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/activity_vertical_margin"/>

                <View style="@style/Divider"/>

                <com.getslapp.slapp.AileronButton
                    android:text="Want to promote something?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:onClick="promotionAlert"/>

                <View style="@style/Divider"/>

                <com.getslapp.slapp.AileronButton
                    android:text="Want to add an event?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif"
                    android:textAlignment="viewStart"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:onClick="eventAlert"/>

                <View style="@style/Divider"/>

                <com.getslapp.slapp.AileronButton
                    android:text="Found a bug?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif"
                    android:textAlignment="viewStart"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:onClick="bugAlert"/>

                <View style="@style/Divider"/>

            </LinearLayout>

            <com.getslapp.slapp.AileronTextView
                android:text="Credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textAlignment="viewStart"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingBottom="10dp"
                android:paddingTop="40dp"
                android:textColor="#555555" />

            <View style="@style/Divider"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <com.getslapp.slapp.AileronButton
                    android:text="Developer: Kris Vanhoutte"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button7"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:clickable="false"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:textStyle="normal" />

                <View style="@style/Divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/linkedin_colour"
                    android:id="@+id/imageButton2"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="goToLinkedIn"
                    android:elevation="0dp"
                    android:cropToPadding="true"
                    android:background="@android:color/white"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

                <View style="@style/Divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/twitter_colour"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="goToTwitter"
                    android:background="@android:color/white"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <com.getslapp.slapp.AileronButton
                android:text="Icons8: The source of the icons used in this app."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:textAlignment="viewStart"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:onClick="goToIcons8"/>

            <View style="@style/Divider"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
