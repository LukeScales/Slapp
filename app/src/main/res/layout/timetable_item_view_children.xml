<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <View
        android:id="@+id/timetable_colour_view"
        android:background="@android:color/darker_gray"
        android:layout_width="50dp"
        android:layout_height="100dp"/>
    <com.getslapp.slapp.AileronTextView
        android:id="@+id/timetable_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Type"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"/>
    <com.getslapp.slapp.AileronTextView
        android:id="@+id/timetable_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timetable_colour_view"
        android:padding="10dp"
        android:text="Time"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart" />
    <com.getslapp.slapp.AileronTextView
        android:id="@+id/timetable_location_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timetable_time_textview"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Location"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="viewEnd" />
    <com.getslapp.slapp.AileronTextView
        android:id="@+id/timetable_module_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/timetable_colour_view"
        android:layout_below="@id/timetable_time_textview"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:text="Module"
        android:textSize="15dp"
        android:textColor="@android:color/black" />
    <View style="@style/Divider"
        android:layout_below="@+id/timetable_colour_view"/>
</merge>